pipeline{
    agent any

    environment{
        AWS_REGION = 'us-east-1'
        IMAGE_NAME = 'git-tutorial3'
        REPO_NAME = 'test'
        IMAGE_TAG = 'latest'
    }
    stages{
        stage('checkout'){
            steps{
                git 'https://github.com/Emmy-S-300/git-tutorial3.git'
            }
        }

        stage('Tag the image'){
            steps{
                script{
                    IMAGE_TAG = 'latest'
                }
            }
        }
        stage('Login to ECR'){
            steps{
                withAWS(region: "us-east-1", credentials: 'aws-creds'){
                    powershell """
                    aws ecr get-login-password --region ${env.AWS_REGION} | docker login --username AWS --password-stdin 745490702538.dkr.ecr.${env.AWS_REGION}.amazonaws.com
                    """
                }
            }
        }
        stage('Build Docker Image'){
            steps{
                powershell """
                docker build -t ${env.IMAGE_NAME}:${env.IMAGE_TAG} .
                docker tag ${env.IMAGE_NAME}:${env.IMAGE_TAG} 745490702538.dkr.ecr.us-east-2.amazonaws.com/test:latest
                """
            }
        }
        stage('push to ECR'){
            steps{
                powershell """
                docker push 745490702538.dkr.ecr.us-east-2.amazonaws.com/test:latest
                """
            }
        }
    }
}
