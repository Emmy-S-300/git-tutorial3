pipeline {
    agent any
    environment {
        AWS_REGION = 'us-east-2'
        ECR_REPO = '745490702538.dkr.ecr.us-east-2.amazonaws.com/test'
    }
    stages {
        stage('Login to AWS ECR') {
            steps {
                withAWS(region: 'us-east-2', credentials: 'aws-ecr-creds') {
                sh '''
                aws ecr get-login-password --region us-east-2 | docker login --username AWS --password-stdin 745490702538.dkr.ecr.us-east-2.amazonaws.com/test
                '''
                    }              
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $ECR_REPO:latest .
                '''
            }
        }
        stage('Push Docker Image') {
            steps {
                sh '''
                docker push $ECR_REPO:latest
                '''
            }
        }
    }
}
