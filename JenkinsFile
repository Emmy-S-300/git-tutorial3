pipeline {
    agent any
    environment{
        IMAGE_NAME - 'eschonau/git-tutorial3'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch 'master', url: 'https://github.com/Emmy-S-300/git-tutorial3'
            }
        }
        stage('Build Docker Image'){
            steps {
                bat "docker build -t %IMAGE_NAME%:lastes ."
            }
        }
        stage('Push to Dockerhub'){
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerFromTutorial', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')])
                    bat """
                    echo %DOCKER_PASS% |
                    docker login -u %DOCKER_USER% --password-stdin
                    docker push %IMAGE_NAME%:latest
                    docker logout
                    """
            }
        }
    }
    post{
        success{
            sh 'echo "build successful"'
        }
        failure{
            sh 'echo "build failed"'
        }
    }
}
