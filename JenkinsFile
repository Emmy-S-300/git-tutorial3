pipeline{
    agent any
    environment{
        VENV = 'venv'
    }
    stages{
        stage('Check out'){
            steps{
                git branch: 'master', url: 'https://github.com/Emmy-S-300/git-tutorial3.git'
            }
        }
        stage{
            steps{
                bat 'python -m venv %VENV%'
                bat '%VENV%\\Scripts\\python -m pip install --upgrade pip'
                bat '%VENV%\\Scripts\\pip install -r requierments.txt'
            }
        }
        stage{
            steps('run the test'){
                bat'%VENV%\\Scripts\\python mangae.py test'
            }
        }
    }
}
